# Example environment variables for fs-data-sink

# Source configuration
SOURCE_TYPE=kafka
# SOURCE_TYPE=redis

# Kafka source
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPICS=data-topic,another-topic
KAFKA_GROUP_ID=fs-data-sink-group

# Redis source
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=secret
# REDIS_STREAM_KEYS=stream1,stream2

# Sink configuration
SINK_TYPE=s3
# SINK_TYPE=hdfs

# S3 sink
S3_BUCKET=my-data-bucket
S3_PREFIX=raw-data
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# HDFS sink
# HDFS_URL=http://namenode:9870
# HDFS_BASE_PATH=/data/raw
# HDFS_USER=hdfs

# Telemetry
LOG_LEVEL=INFO
OTEL_ENABLED=true
OTEL_SERVICE_NAME=fs-data-sink
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
